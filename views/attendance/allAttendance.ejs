<%- include('../partials/header', { title: 'All Attendance', user }) %>

<h2 class="mb-4">All Students Attendance</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Student</th>
      <th>Email</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% attendance.forEach(record => { %>
      <tr>
        <td><%= record.user.name %></td>
        <td><%= record.user.email %></td>
        <td><%= record.date.toDateString() %></td>
        <td><%= record.status %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>