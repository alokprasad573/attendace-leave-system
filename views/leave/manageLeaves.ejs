<%- include('../partials/header', { title: 'Manage Leaves', user }) %>

<h2 class="mb-4">Manage Leave Requests</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Student</th>
      <th>Reason</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% leaves.forEach(l => { %>
      <tr>
        <td><%= l.user.name %></td>
        <td><%= l.reason %></td>
        <td><%= l.status %></td>
        <td>
          <form method="POST" action="/leave/<%= l._id %>?_method=PATCH" class="d-inline">
            <button name="status" value="approved" class="btn btn-success btn-sm">Approve</button>
            <button name="status" value="rejected" class="btn btn-danger btn-sm">Reject</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>