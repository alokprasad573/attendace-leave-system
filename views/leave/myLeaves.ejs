<%- include('../partials/header', { title: 'My Leaves', user }) %>

<h2 class="mb-4">My Leave Requests</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Reason</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% leaves.forEach(l => { %>
      <tr>
        <td><%= l.reason %></td>
        <td><span class="badge bg-<%= l.status === 'approved' ? 'success' : l.status === 'rejected' ? 'danger' : 'warning' %>"><%= l.status %></span></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>